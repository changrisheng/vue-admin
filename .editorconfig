# 统一项目开发风格
# 是否是顶级配置文件，设置为 true 的时候才会停止搜索.editorconfig 文件
root = true

[*]
# 编码格式  charset <“latin” | “utf-8” | “utf-8-bom” | “utf-16be” | “utf-16le”>
charset = utf-8
# 缩进方式 indent_style <“tab” | “space”>
indent_style = space
# 缩进大小 indent_size <number>
indent_size = 2
# 换行符类型 end_of_line<“lf” | “cr” | “crlf”>
end_of_line = lf
# 是否让文件以空行结束
insert_final_newline = true
# 最大行宽 max_line_length
max_line_length = 80
# 是否删除行尾空格
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
